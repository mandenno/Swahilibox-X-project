<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Business_Details">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="LODGE CASE"

        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="This business permit is Invalid"

        android:textAlignment="center"
        android:textColor="@color/red_btn_bg_pressed_color"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/case_no"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/shapeit"
        android:drawableLeft="@drawable/ic_security"
        android:backgroundTint="#F5F5F5"
        android:ems="16"
        android:editable="false"
        android:hint="Case no"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="45dp" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/court_date"
        android:layout_below="@+id/case_no"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/shapeit"
        android:backgroundTint="#F5F5F5"
        android:editable="false"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_date"
        android:ems="16"
        android:hint="Court Date"
        android:inputType="text"
        android:padding="10dp"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/cust_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/court_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/shapeit"
        android:backgroundTint="#F5F5F5"
        android:drawableLeft="@drawable/ic_person"
        android:ems="16"
        android:hint="Enter Customer Name"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/cust_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/cust_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/shapeit"
        android:backgroundTint="#F5F5F5"
        android:drawableLeft="@drawable/ic_phone"
        android:ems="16"
        android:hint="Enter Customer phone"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/bus_desc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/cust_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/shapeit"
        android:backgroundTint="#F5F5F5"
        android:drawableLeft="@drawable/ic_edit"
        android:ems="16"
        android:hint="Short description about the busisness"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <Button
        android:id="@+id/lodge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_desc"
        android:layout_marginTop="40dp"
        android:background="@mipmap/shapeit"
        android:text="LODGE CASE"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />
</RelativeLayout>
</ScrollView>
</RelativeLayout>