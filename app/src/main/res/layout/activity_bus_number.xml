<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/gradientv"
    android:layout_height="match_parent"
    tools:context=".Bus_number">

    <EditText
        android:id="@+id/bus_no"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textViewx"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/shapeit"
        android:backgroundTint="#FAFAFA"
        android:ems="16"
        android:hint="Enter Business Number"
        android:inputType="number"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/shapeit"
        android:backgroundTint="@color/colorPrimary"
        android:drawableRight="@drawable/arrow_right"
        android:text="SCAN QR CODE"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        app:srcCompat="@drawable/auth" />

    <TextView
        android:id="@+id/textViewx"
        android:layout_width="401dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="9dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="15dp"
        android:text="Business Permit Validation"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>